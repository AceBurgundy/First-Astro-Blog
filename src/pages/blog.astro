---
import Layout from "../layouts/wrapper.astro"
import Card from "../components/feature-card.astro"
import Showcase from "../components/showcase.astro"

const posts = await Astro.glob('../posts/*.md');
---

<Layout title="Astro Blog">
  <Showcase heading="Astro Blog" text="A simple blog built with Astro" />
  <section class="page-content">
    <div class="container">
      {posts.map(post => (
        <Card>
          <h3>{post.frontmatter.title}</h3>
          <div>
          Written by <strong>{post.frontmatter.author} </strong> on {new Date(post.frontmatter.date).toLocaleDateString()}
        </div>
          <p>{post.frontmatter.excerpt}</p>  
          <a class="btn" href={`/${post.frontmatter.slug}`}>Read More</a>
        </Card>
      ))}
    </div>
  </section>
</Layout>
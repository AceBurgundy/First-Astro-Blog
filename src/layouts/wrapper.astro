---
import '../styles/global.css'
import Header from "../components/header.astro"
import Footer from "../components/footer.astro"

export interface Props {
  title?: string; // '?' makes title optional
}

/*
  using destructuring for Astro.props as Props

  title = 'Astro Crash Course' is set to default when no title arguments passed from the child component

  'Astro Crash Course' may be removed if '?' was removed from the interface indicating that all child components must have a title
*/
const { title = 'Astro Crash Course'} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <title>{ title }</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
